<!DOCTYPE html>
<html>
  <head>
    <link rel='icon' href='favicon.ico' type='image/x-icon' />
    <title>Quiz</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <form name="buscador" id="finder" action="/lista" method="get">
        Buscador: <input type="text" name="busqueda" value="Texto a buscar...">
        <button type="submit">Buscar</button>
    </form>
    <br>
    <center>
    <table class="tabla">
    <% var i; for (i=0; i < quizes.length; i++) { %>
        <tr>
          <td align=center><a href="quizes/<%= quizes[i].id %>">Pregunta <%= i+1 %>. <%= quizes[i].pregunta %></a></td>
          <% if (session.user) { %>
          <td align=center><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
          <td>
            <form method="post" action="quizes/<%= quizes[i].id%>?_method=delete">

              <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');"> borrar </button>
            </form>
          </td>
          <% } %>
        </tr>
     <% } %>
    </table>
    <br>
    <% if (session.user) { %>
    <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
    <% } %>
  </center>
  </body>
</html>