<!DOCTYPE html>
<html>
  <head>
    <link rel='icon' href='favicon.ico' type='image/x-icon' />
    <title>Estadísticas</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
   <center>
    <h2><u>Estadísticas de la Base de Datos</u></h2>
    <br>
    <table class="tabla2">
      <%var sinComentarios = 0; var conComentarios = 0; var nMedio = 0%>
      <% var i; for (i=0; i < quizes.length; i++) { %>
      <% for (quizes[i].Comments){ %>
            conComentarios ++;
        <% } else {%>
            sinComentarios ++;
        <% } %>
      <% } %>
      <tr><td align=left>Número de preguntas:</td>
          <td align=center><%=quizes.length%></td></tr>
      <tr><td align=left>Número de comentarios totales:</td>
        <td align=center><%=comment.length%></td>
      </tr>
      <tr><td align=left>Número medio de comentarios por pregunta:</td>
          <td align=center><%= nMedio%></td>
      </tr>
      <tr><td align=left>Número de preguntas sin comentarios:</td>
          <td align=center><%= sinComentarios%></td>
      </tr>
      <tr><td align=left>Número de preguntas con comentarios:</td>
          <td align=center><%= conComentarios%></td>
      </tr>
    </table>
  </center>
  </body>
</html>
